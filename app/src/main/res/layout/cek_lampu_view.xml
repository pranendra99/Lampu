<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cekLampuCardView"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">
    <RelativeLayout
        android:id="@+id/rlCek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCekInfo"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/gagal"/>

        <TextView
            android:id="@+id/txtCekInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgCekInfo"
            android:layout_alignLeft="@id/imgCekInfo"
            android:layout_alignRight="@id/imgCekInfo"
            android:layout_alignBottom="@id/imgCekInfo"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:text="@string/tidak_ada_koneksi_internet"
            android:textColor="@color/white"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>