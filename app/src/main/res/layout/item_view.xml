<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f0f4f4">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RelativeLayout
            android:id="@+id/toggle"
            android:layout_width="140dp"
            android:layout_height="100dp">
            <ToggleButton
                android:id="@+id/off_button"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:background="@drawable/off1"
                android:textOff=""
                android:text=""
                android:textOn=""/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txtNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/toggle"
            android:layout_alignRight="@id/toggle"
            android:layout_alignLeft="@id/toggle"
            android:layout_alignTop="@id/toggle"
            android:visibility="visible">
            <TextView
                android:id="@+id/nomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>